{
  "version": 2,
  "devCommand": "npm-run-all --parallel dev:api dev:frontend",
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.10" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/.svelte-kit/output/client",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py",
      "methods": ["GET","POST","OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "frontend/.svelte-kit/output/client/$1"
    }
  ]
  
}
